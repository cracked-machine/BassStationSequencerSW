{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [

        {
            "label": "execute build",
            "type": "process",
            "command": "${workspaceRoot}/build/build"
        },
        {
            "label": "create report",
            "type": "shell",
            "command": "rm coverage/*; gcovr  -r . -e build -e 'source/(.+)/tests/' --html --html-details -o coverage/index.html"
        },
        {
            "label": "open report",
            "type": "shell",
            "command": "firefox ${workspaceRoot}/coverage/index.html"
        },
        {
            "label": "coverage report",
            "dependsOrder": "sequence",
            "dependsOn": ["execute build", "create report", "open report"]
        }
    ]
}